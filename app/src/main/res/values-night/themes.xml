    <!-- STYLE SEARCHVIEW -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlNormal">@color/white</item> <!-- Warna ikon -->
        <item name="android:textColor">@color/white</item> <!-- Warna teks -->
        <item name="android:background">@color/dark_blue</item> <!-- Warna background -->
        <item name="cornerRadius">16dp</item>
    </style>
    <!-- STYLE SEARCHVIEW -->

    <style name="CustomSearchBarStyle" parent="Widget.Material3.SearchBar">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
    </style>

</resources>