<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KulinerIn" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>

        <item name="colorSecondary">@color/dark_blue</item>

        <item name="colorTertiary">@color/dark_blue</item>

        <item name="colorPrimaryContainer">@color/dark_blue</item>
        <item name="colorOnPrimaryContainer">@color/dark_blue</item>

        <item name="colorSecondaryContainer">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/light_blue</item>

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>



    <style name="Theme.KulinerIn" parent="Base.Theme.KulinerIn" />



    <!-- STYLE FONT -->
    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_blue</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
    </style>
    <style name="SubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_blue</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
    </style>
    <style name="CaptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="WelcomeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
    </style>
    <!-- STYLE FONT -->


    <!-- STYLE FAB & BOTNAV -->
    <style name="Widget.KulinerIn.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/black</item>
        <item name="android:elevation">0dp</item>
        <item name="iconTint">@color/light_blue</item>
    </style>
    <style name="Widget.KulinerIn.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Large.Primary">
        <item name="backgroundTint">@color/black</item>
        <item name="elevation">4dp</item>
        <item name="fabCustomSize">90dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
    <!-- STYLE FAB & BOTNAV -->


