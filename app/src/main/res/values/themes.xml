    <!-- STYLE SEARCHVIEW -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlNormal">@color/gray</item> <!-- Warna ikon -->
        <item name="android:textColor">@color/black</item> <!-- Warna teks -->
        <item name="android:background">@color/white_blue</item> <!-- Warna background -->
        <item name="cornerRadius">16dp</item>
    </style>
    <!-- STYLE SEARCHVIEW -->

    <!-- STYLE INPUT -->
    <style name="Widget.KulinerIn.InputField" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableTint">?attr/colorAccent</item>
    </style>
    <!-- STYLE INPUT -->

    <style name="CustomSearchBarStyle" parent="Widget.Material3.SearchBar">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
    </style>

